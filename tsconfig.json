{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"alwaysStrict": true,
		"declaration": true,
		"declarationDir": "./dist/",
		"downlevelIteration": true,
		"esModuleInterop": true,
		"jsx": "react",
		"moduleResolution": "node",
		"target": "ES5"
	},
	"typedocOptions": {
		"entryPoints": [
			"./src/index.ts",
			"./components/index.ts"
		],
		"excludePrivate": true,
		"excludeExternals": true,
		"name": "@boardgame-dsl",
		"out": "./docs/",
		"readme": "none"
	}
}
